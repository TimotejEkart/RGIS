@page
@model RGIS_Vaja4.Pages.OdstranjevanjePotovanjaModel
@{
}

<style>

    body {
        background-color: #f2f2f2;
    }

    .row.content {
        height: auto;
    }

    .leftrightNav {
        padding-top: 20px;
        background-color: #F9F9F9;
        height: auto;
    }

    .centerNav {
        background-color: #FFFFFF;
    }

    footer {
        background-color: #DADADA;
        color: #000000;
        padding: 15px;
    }

    .funkcionalnostiButtoni {
        width: 100%;
        text-align: center;
        display: block;
        box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 10px;
    }

    .izlet-container {
        padding: 10px;
        border: 1px solid #ddd;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 5px;
    }

    #vlogaSelect, #vlogaSelectOption {
        width: 100%;
        text-align: center;
    }

    .alert {
    color: #28a745;
    text-align: left;
    background-color: transparent;
    width: 100%; 
    font-weight: bold; 
    border: none;
    font-size: 20px;
    }
}

</style>


<div class="col-sm-10 text-left centerNav">
    <h1 class="display-5 mb-3 text-primary">IZLETI</h1>

    @if (!String.IsNullOrEmpty(Model.Message))
    {
            <div class="alert alert-success">
            @Model.Message
            </div>
    }

    @foreach (var potovanje in Model.Potovanja)
    {
            <div class="izlet-container" style="padding: 10px;">
                <p><strong>Kraj: </strong> @potovanje.Kraj</p>
                <p><strong>Cena: </strong> @potovanje.Cena €</p>
                <p><strong>Trajanje: </strong> @potovanje.Trajanje dni</p>
                <p><strong>Datum: </strong> @potovanje.Datum.ToString("dd-MM-yyyy")</p>
                <p><strong>Opis: </strong> @potovanje.Opis</p>

                <form method="post" class="text-center" style="margin-bottom: 0; padding: 0;"
                      onsubmit="return confirm('Ali ste prepričani, da želite odstraniti?');"
                      asp-page-handler="Delete" asp-route-PotovanjeIdToDelete="@potovanje.PotovanjeId">
                    <button type="submit" class="btn btn-danger btn-block" style="width: 100%;">
                        Odstrani Potovanje
                    </button>
                </form>
            </div>
    }
</div>