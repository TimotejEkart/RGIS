@page "/dodajanjePotovanja"
@model RGIS_Vaja4.Pages.DodajanjePotovanjaModel
@{
	ViewData["Title"] = "Dodaj Potovanje";
}

<style>
body {
    background-color: #f2f2f2;
}

.dodajanje-page {
    float: left;
    width: 100%;
    height: 100%;
    background-color: #F9F9F9;
    margin: 150px 0px 0px;
    padding: 8px 0px 20px;
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2);
}

.form-bg {
    background-color: #fff;
    border: 1px solid #e5e5e5;
    padding: 50px 30px 30px;
    margin-top: 10px;
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2);
}

.confirm-btn {
    background-color: #007bff;
    border: none;
    width: 100%;
    color: #fff;
    font-size: 14px;
    text-align: center;
    padding: 8px 15px;
    border-radius: 4px;
    font-weight: 600;
    margin: 5px 0px 0px;
    box-shadow: 0px 0px 10px rgba(0, 141, 255, 1); 
}

.confirm-btn:hover{
  opacity: 0.8;
}

.image-upload {
    text-align: center;
    margin: 20px 0;
}

h1 {
    text-align: center;
}

.alert {
    color: #28a745;
    text-align: center;
    background-color: transparent;
    width: 100%; 
    margin-top: 20px; 
    font-weight: bold; 
    border: none;
    font-size: 25px;
}

</style>



<div class="dodajanje-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-lg-6 offset-sm-1 offset-lg-3">     
          <h1>DODAJANJE IZLETA</h1>
        <div class="form-bg">
          <form method="post" asp-page-handler="OnPost">
            <div class="form-group">
              <input type="text" id="kraj" name="Kraj" class="form-control narrow-input" placeholder="Kraj" required />
            </div>
            <div class="form-group">
              <input type="date" id="datum" name="Datum" class="form-control narrow-input" required />
            </div>
            <div class="form-group">
              <input type="text" id="trajanje" name="Trajanje" class="form-control narrow-input" placeholder="Trajanje (v dneh)" required />
            </div>
            <div class="form-group">
              <input type="text" id="cena" name="Cena" class="form-control narrow-input" placeholder="Cena" required />
            </div>
            <div class="form-group">
              <textarea id="opis" name="Opis" class="form-control narrow-input" placeholder="Opis" required></textarea>
            </div>
            <br />
            <div class="form-group">
            <button type="submit" class="confirm-btn bg-primary">POTRDI</button>

            </div>
          </form>
        </div>      
      </div>
    </div>
  </div>

    @if (!String.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">
            @Model.Message
        </div>
    }

</div>
